{
  "compilerOptions": {
    "strictNullChecks": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "es2021",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", ".turbo", ".storybook"],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
