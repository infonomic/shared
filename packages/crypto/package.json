{
  "name": "@infonomic/crypto",
  "private": false,
  "license": "MIT",
  "version": "2.2.0",
  "type": "module",
  "description": "Infonomic crypto is a collection of reusable crypto library functions and helper modules.",
  "keywords": [
    "crypto"
  ],
  "homepage": "https://github.com/infonomic/shared",
  "bugs": {
    "url": "https://github.com/infonomic/shared/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infonomic/shared.git"
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./passwords": {
      "types": "./dist/passwords.d.ts",
      "import": "./dist/passwords.js",
      "default": "./dist/passwords.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "clean": "rm -rf node_modules dist",
    "test": "vitest",
    "lint": "eslint --ext .ts,.js./src",
    "version-packages": "changeset version",
    "release:tag": "pnpm run build && changeset tag",
    "release:npm": "pnpm run build && changeset publish"
  },
  "dependencies": {
    "argon2": "^0.43.1",
    "dotenv": "^17.2.1",
    "jose": "^6.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
